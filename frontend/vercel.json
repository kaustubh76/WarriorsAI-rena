{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "devCommand": "npm run dev:next",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/execute-battles",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/execute-resolutions",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/sync-markets",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/settle-arbitrage-battles",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/detect-arbitrage",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sync-whale-trades",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
